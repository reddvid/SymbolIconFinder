                         </ObjectAnimationUsingKeyFrames>
                         <ObjectAnimationUsingKeyFrames Storyboard.TargetName="btnIcon" Storyboard.TargetProperty="FontWeight">
                         <DiscreteObjectKeyFrame KeyTime="0" Value="SemiBold" />
                         </ObjectAnimationUsingKeyFrames>
                         </Storyboard>
                         </VisualState>
                         <VisualState x:Name="PointerExited">
                         <Storyboard>
                         <ObjectAnimationUsingKeyFrames Storyboard.TargetName="btnIcon" Storyboard.TargetProperty="Foreground">
                         <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ButtonForegroundThemeBrush}" />
                         </ObjectAnimationUsingKeyFrames>
                         <ObjectAnimationUsingKeyFrames Storyboard.TargetName="tbDesc" Storyboard.TargetProperty="Foreground">
                         <DiscreteObjectKeyFrame KeyTime="0" Value="{ThemeResource ButtonForegroundThemeBrush}" />
                         </ObjectAnimationUsingKeyFrames>
                         <ObjectAnimationUsingKeyFrames Storyboard.TargetName="tbDesc" Storyboard.TargetProperty="FontWeight">
                         <DiscreteObjectKeyFrame KeyTime="0" Value="Normal" />
                         </ObjectAnimationUsingKeyFrames>
                         <ObjectAnimationUsingKeyFrames Storyboard.TargetName="btnIcon" Storyboard.TargetProperty="FontWeight">
